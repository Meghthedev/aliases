# into the .zshrc it goes

alias make="make -j`nproc`"
alias ninja="ninja -j`nproc`"
alias n="ninja"
alias c="clear"
alias cleanch="sudo pacman -Scc"
alias fixpacman="sudo rm /var/lib/pacman/db.lck"
alias e="kwrite"
alias yoink="repo sync  --force-sync --current-branch --no-tags --no-clone-bundle --optimized-fetch --prune -j8"
alias yoink-verbose="repo sync  --force-sync --current-branch --no-tags --no-clone-bundle --optimized-fetch --prune -j8 -v"
alias i="paru -S"
alias s="paru"
alias u="pacman -Rns"
alias up="pacman -Syu"
alias error="cat out/error.log"
alias log="cat out/error.log | curl -F 'f:1=<-' ix.io"
alias c="code"
alias cd2="cd ../../"
alias cd3="cd ../../../"
